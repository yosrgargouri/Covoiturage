<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="367dp"
        android:layout_marginTop="10dp"
        android:layout_weight="@dimen/activity_horizontal_margin"
        android:background="@drawable/_6390692_r_sum__flou_fond_d_grad__avec_la_tendance_pastel_rose_pourpre_violet_jaune_et_bleu_pour_les_concepts_daigne_"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/fullName4"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Full name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/email3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="italic"
            tools:ignore="DuplicateIds" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelAdresseDepart"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Departure address:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/adresseDepart"
                android:layout_width="207dp"
                android:layout_height="30dp"
                android:layout_below="@+id/labelAdresseDepart"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Departure address"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Departure city:"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/labeLadresseDestination"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Departure city"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelHeureDepart"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Date of departure:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/heureDepart"
                android:layout_width="204dp"
                android:layout_height="30dp"
                android:layout_below="@+id/labelHeureDepart"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Date of departure"
                android:textColor="@color/black" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labeLadresseDestination"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Destination address:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/adresseDestination"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labeLadresseDestination"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Destination address"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Destination city:"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="196dp"
                android:layout_height="33dp"
                android:layout_below="@+id/labeLadresseDestination"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Destination city"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelNombrePlace"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Number of places :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/nombrePlace"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labelNombrePlace"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Number of places "
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labeLprix"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Price:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/prix"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labeLprix"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Price"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTelephone"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Telephone number:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labelTelephone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Telephone number"
                android:textColor="@color/black" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>


    </LinearLayout>
</LinearLayout>
