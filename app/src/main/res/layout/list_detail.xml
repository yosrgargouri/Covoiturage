<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_marginTop="10dp"
        android:background="#E8DBFF"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/fullName2"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Full name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="italic"
            tools:ignore="DuplicateIds" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelAdresseDepart"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Departure address:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/adresseDepart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labelAdresseDepart"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Departure address"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelHeureDepart"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Date of departure:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/heureDepart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labelHeureDepart"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Date of departure"
                android:textColor="@color/black" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labeLadresseDestination"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Destination address:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/adresseDestination"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labeLadresseDestination"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Destination address:"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelNombrePlace"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Number of places :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/nombrePlace"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labelNombrePlace"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="Number of places "
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnShowDetails"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Show details"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                app:backgroundTint="@color/ss" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnSendRequest"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Send request"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                app:backgroundTint="@color/ss" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>