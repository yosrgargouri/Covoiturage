<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="298dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/capture5"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/labelAdresseDepart"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Adresse depart : "
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/adresseDepart"
                android:layout_width="150dp"
                android:layout_height="41dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/labelHeureDepart"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Date et Heure de depart : "
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/heureDepart"
                android:layout_width="150dp"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="datetime"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labeLadresseDestination"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Adresse destination : "
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/adresseDestination"
                android:layout_width="150dp"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelNombrePlace"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Nombre de place : "
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/nombrePlace"
                android:layout_width="150dp"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labeLprix"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Prix : "
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/prix"
                android:layout_width="150dp"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTelephone"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Numero de telephone : "
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/telephone"
                android:layout_width="150dp"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            app:backgroundTint="@color/purple_200" />


    </LinearLayout>

</LinearLayout>
