<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="221dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/labelAdresseDepart"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Adresse depart : " />

            <EditText
                android:id="@+id/adresseDepart"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp">

            <TextView
                android:id="@+id/labelHeureDepart"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Heure de depart : " />

            <EditText
                android:id="@+id/heureDepart"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labeLadresseDestination"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Adresse destination : " />

            <TextView
                android:id="@+id/adresseDestination"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labeLadresseDestination"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="adresse destination" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelNombrePlace"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Nombre de place : " />

            <TextView
                android:id="@+id/nombrePlace"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labelNombrePlace"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="nombre de place" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labeLprix"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Prix : " />

            <TextView
                android:id="@+id/prix"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labeLprix"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="prix" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTelephone"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:gravity="center|right"
                android:text="Numero de telephone : " />

            <TextView
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/labelTelephone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:text="numero de telephone" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
